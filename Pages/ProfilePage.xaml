<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Denomination.Pages.ProfilePage"
             Title="ProfilePage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="25" Spacing="25">
        <VerticalStackLayout Padding="20">
            <Picker x:Name="CurrencyPicker"
        Title="Select Currency"
        SelectedIndexChanged="CurrencyPicker_SelectedIndexChanged" />
        </VerticalStackLayout>
        <Label 
            Text="Profile Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button MinimumWidthRequest="30" MaximumWidthRequest="300" Text="Logout" Clicked="Logout"/>
    </VerticalStackLayout>
</ContentPage>