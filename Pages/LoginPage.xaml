<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Denomination.Pages.LoginPage"
             Title="LoginPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <VerticalStackLayout 
        VerticalOptions="Center" 
        Spacing="20" 
        HorizontalOptions="Center" 
        MinimumHeightRequest="600" 
        MinimumWidthRequest="300"
        MaximumWidthRequest="500"
        >

        <Label Text="Login with credentials" 
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />


        <Entry x:Name="UserIdEntry" Placeholder="Enter User ID" />

       
        <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" />

    
        <Button Text="Login" Clicked="ButtonClicked" />
    </VerticalStackLayout>
 
</ContentPage>
